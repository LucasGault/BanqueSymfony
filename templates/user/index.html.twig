{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="flex justify-around bg-purple-600 text-xl text-white py-6"> 
        <h1 class="text-4xl">Liste des utilisateurs</h1>
    </div>
    <div class="bg-purple-600 max-w-6xl p-10 mt-40 pt-20 text-white mx-auto ">
        {% for user in users %}
            <div class="pb-10">
                <p class="font-semibold">Utilisateur NÂ°: {{ user.id }}</p>
                <p>Email: {{ user.email }}</p>
                {# <p>{{ user.roles ? user.roles|json_encode : '' }}</p> #}
                <p>Prenom: {{ user.firstname }}</p>
                <p>Nom: {{ user.lastname }}</p>
                <p>Date de naissance: {{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</p>
                <p class="text-2xl" >
                    <a href="{{ path('user_show', {'id': user.id}) }}">Information</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                </p>
            </div>
        {% else %}
                <p colspan="8">no records found</p>
        {% endfor %}
        <div class="flex justify-center font-semibold text-2xl">
            <a class="mx-auto mt-12" href="{{ path('index') }}">Retourner au menu principal</a>
        </div>
    </div>

    {# <a href="{{ path('user_new') }}">Create new</a> #}
{% endblock %}
